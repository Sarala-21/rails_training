<p id="notice"><%= notice %></p>

<h1>Profiledetails</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Education</th>
      <th>Experience</th>
      <th>Resume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiledetails.each do |profiledetail| %>
      <tr>
        <td><%= profiledetail.first_name %></td>
        <td><%= profiledetail.last_name %></td>
        <td><%= profiledetail.education %></td>
        <td><%= profiledetail.experience %></td>
        <td><%= profiledetail.resume %></td>
 <!--       <td><%= link_to 'Show', profiledetail %></td> -->
        <td><%= link_to 'Edit', edit_profiledetail_path(profiledetail) %></td>
        <td><%= link_to 'Destroy', profiledetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

