<div class="card" style="width: 18rem;">
  <div class="card-body">
    <%= form_with(model: book, local: true) do |f| %>
      <% if book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <%= f.fields_for :author, @book.author do |p| %>
        <div class="field">
          <%= p.label :author %>
          <%= p.text_field :author_name %>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :price %>
        <%= f.number_field :price %>
      </div>

       

      <div class="field">
        <%= f.label :availability %>
        <%= f.check_box :availability %>
      </div>

      <br/>
     
      <div class="actions">
        <%= f.submit %>
      </div>

    <% end %>    
  </div>
</div>





